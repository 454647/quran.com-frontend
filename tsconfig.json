{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "noEmit": true,
    "isolatedModules": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "lib": ["es5", "es2015", "es2017", "dom"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "keyofStringsOnly": true,
    "importHelpers": true,
    "strictNullChecks": true
  },
  "include": [
    "./src/**/*",
    "./config/**/*",
    "./shared/**/*",
    "./internal/**/*"
  ],
  "exclude": [
    "./tests/**/*",
    "./src/**/_tests_/**/*",
    "*.scss"
  ]
}
